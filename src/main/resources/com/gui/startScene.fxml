<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="BorderPane" fx:id="startScene" styleClass="bodybg" stylesheets="@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gui.ControllerStartScene">
    <center>
        <VBox alignment="CENTER" blendMode="SRC_ATOP" prefHeight="661.0" prefWidth="1470.0" spacing="10" style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="10" left="10" right="10" />
            </padding>
            <Button fx:id="btnNewGame" defaultButton="true" onAction="#loadNewGame" prefHeight="36.0" prefWidth="128.0" text="NEW GAME" underline="true">
            <font>
               <Font size="18.0" />
            </font>
            <effect>
               <Bloom />
            </effect></Button>
            <Button fx:id="btnSavedGame" prefHeight="33.0" prefWidth="126.0" text="SAVED GAME">
            <font>
               <Font size="18.0" />
            </font></Button>
            <Button fx:id="btnExitGame" prefHeight="33.0" prefWidth="129.0" text="EXIT">
            <font>
               <Font size="18.0" />
            </font></Button>
        </VBox>


    </center>
</BorderPane>
