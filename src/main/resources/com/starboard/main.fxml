<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPanel" prefHeight="456.0" prefWidth="902.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.starboard.ControllerMain">
    <top>
        <MenuBar prefHeight="9.0" prefWidth="946.0">
            <menus>
                <Menu style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed" text="Contacts">
                    <items>
                        <MenuItem text="Add ...." />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <TextArea fx:id="gameTextArea" prefWidth="108.0" style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed" text="You are at the bridge and were notified there are a few aliens boarding the ship.&#10;&#10; You need to successfully escape to the POD and kill any alien on your way to win!&#10;&#10; &quot;Good Luck!&quot;">
         <cursor>
            <Cursor fx:constant="WAIT" />
         </cursor></TextArea>
    </center>

    <right>

        <VBox>
            <HBox alignment="TOP_LEFT" spacing="10" style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed" xmlns:fx="http://javafx.com/fxml">
                <!--            <padding>-->
                <!--                <Insets bottom="10" right="10" left="10"/>-->
                <!--            </padding>-->
                <MenuBar>
                    <menus>
                        <Menu text="Inventory">
                            <items>
                                <MenuItem text="Add ...." />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" spacing="10" style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed" xmlns:fx="http://javafx.com/fxml">
                <!--            <padding>-->
                <!--                <Insets bottom="10" right="10" left="10"/>-->
                <!--            </padding>-->
                <Button fx:id="btnOk" onAction="#handle" prefWidth="90" text="ok" />
                <Button prefWidth="90" text="Cancel" />
                <Button prefWidth="90" text="Help" />
            </HBox>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="BOTTOM_LEFT" prefHeight="23.0" prefWidth="895.0" spacing="10" style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="10" left="10" right="10" />
            </padding>
            <TextField alignment="BOTTOM_LEFT" prefWidth="550" text="enter text here" />

            <Button fx:id="btnUserInput" onAction="#guiGameIntro" prefWidth="90" text="Enter" />
        </HBox>
    </bottom>
</BorderPane>
